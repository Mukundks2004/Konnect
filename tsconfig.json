{
    "compilerOptions": {
      "target": "ES6",
      "lib": [
          "es2017",
          "dom"
      ],
      "module": "ES6",
      "moduleResolution": "node",
      "outDir": "./dist",
      "types": ["p5"], 
      "baseUrl": ".",     
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
        "*": ["node_modules/*", "src/*"]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/*.ts",
      "global.d.ts"    ]
  }
  